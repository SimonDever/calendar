{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "listFiles": false,
    "jsx": "react",
    "target": "es6",
    "outDir": "app",
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "watch": false,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "types": [
      "node",
      "whatwg-fetch"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
